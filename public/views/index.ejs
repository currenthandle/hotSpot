<!doctype>
<html>
<head>
	<!-- <link rel="stylesheet" type="text/css" href='/css/bootstrap.min.css'> -->
	<!-- <link rel="stylesheet" type="text/css" href="/css/index.css"> -->
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/css/new.css">
</head>
<body>
    <div class='header'>
        <h1>Hot Spot Rank</h1>
        <div class='table-header'>
            <div class='name'>Name</div>
            <div class='address'>Address</div>
            <div class='downAvg' id="downloadHeader">
                <form action="/" medivod="get">
                    <input type="hidden" name="sorter" value="downAvg">
                    <button type="submit" class="btn btn-success">Download</button>
                </form>
            </div>
            <div class='upAvg' id="uploadHeader">
                <form action="/" method="get">
                    <input type="hidden" name="sorter" value="upAvg">
                    <button type="submit" class="btn btn-success">Upload</button>
                </form>
            </div>
            <button onclick="openAddForm(event)" class='open-add-form'>Add Hotspot</button>
        </div>
    </div>
    <div class='addSpot'>
        <i onclick='collapseForm(event)' class='fa fa-times-circle-o' aria-hidden='true'></i>
        <form id="addCafe" action="/addCafe" method="post">
            <div><input type="text" class="col-sd-5 form-control" name="name" placeholder="Name"></div>
            <div><input type="text" class="col-sd-5 form-control" name="address" placeholder="Address"></div>
            <div><button class="add-location" type="submit">Add Location</button></div>
        </form>
    </div>
    <div class="table">
        <div class='table-data'>
            <% for (var i = 0; i < cafes.length; i++) { %>
                <div class='table-row'>
                    <div class='name'><%= cafes[i].name %></div>
                    <div class='address'><%= cafes[i].address %></div>
                    <div class='downAvg'><%= Math.round(100*cafes[i].downAvg)/100  %></div>
                    <div class='upAvg'><%= Math.round(100*cafes[i].upAvg)/100  %></div>
                    <div class='addTest'>
                        <form class="addTest" action="/addTest" method="post">
                            <input type="hidden" name="id" value="<%= cafes[i]._id %>">
                            <button type="submit" class="btn btn-primary">Add Test</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div> <!-- table-data -->
    </div> <!-- table -->
    <footer class="row">
    </footer>

    <script>
        function openAddForm(e){
            e.preventDefault()
            console.log('hi')
            var form = document.querySelector('.addSpot')
            form.style.display = "block"
        }
        function collapseForm(e) {
            e.preventDefault()
            var form = document.querySelector('.addSpot')
            form.style.display = "none"
        }
        (function(){
            console.log('in')
            var body = document.getElementsByTagName('body')[0]
            var addSpot = document.querySelector('.addSpot')
            var openForm = document.querySelector('.open-add-form')

            var name = document.querySelector('.addSpot').getElementsByTagName('form')[0].getElementsByTagName('input')[0]
            var address = document.querySelector('.addSpot').getElementsByTagName('form')[0].getElementsByTagName('input')[1]
            var submit = document.getElementsByTagName('form')[0].getElementsByTagName('button')[0]

            console.log('name', name)
            console.log('submit', submit)
            console.log('body', body)
            console.log('addSpot.children', addSpot.children)
            body.addEventListener('click', function(e) {
                console.log('e.target', e.target)
                if(e.target === openForm) { openAddForm(e) }
                else if(e.target === addSpot) { openAddForm(e) }
                else if(e.target === name) { return }
                else if(e.target === address) { return }
                else  { collapseForm(e) }
            })
        })()
    </script>
	<script src='/js/bundle.js'></script>
</body>
</html>
